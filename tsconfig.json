{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react-jsx", // remove if not using JSX. shouldn't break anything though.
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "include": [
    ".eslintrc.js",
    "src/**/*.ts",
    "src/**/*.tsx" /* add more files as required such as your vite.config.ts or custom type declarations for raw file imports */
  ]
}
